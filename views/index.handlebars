{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

<h1>All Da Burgers!</h1>

<h2>Burgers that need to get in your belly!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="change-eat" data-id="{{id}}" data-eaten="{{devoured}}">
            {{#if devoured}}Devour It!{{/if}}
        </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>That burger is gone!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

 
  {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
  <button type="submit">Add Burger</button>

</form>