{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

<h1>All Da Burgers!</h1>

<h2>Burgers that need to get in your belly!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="change-eat" data-id="{{id}}" data-eaten="{{devoured}}">
            {{#if !devoured}}Eat Me!{{else}}All Gone!{{/if}}
        </button>

        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>That burger is gone!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}

        <button class="change-eat" data-id="{{id}}" data-eaten="{{devoured}}">
            {{#if !devoured}}Eat Me!{{else}}All Gone!{{/if}}
        </button>

        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Yummm!<br>
    <input type="radio" name="eaten" value="0"> Eat Me
  </div>

  {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
  <button type="submit">Add Burger</button>

</form>